<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:padding="16dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Добавить адрес"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>


    <EditText
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bluecirclebutton"
        android:gravity="center_vertical"
        android:hint="Название комнаты"


        android:padding="16dp"
        android:paddingLeft="16dp" />

    <TextView
android:textStyle="bold"
        android:textColor="@color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-255dp"
        android:text="Выбрать тип"
        android:padding="16dp"
        android:gravity="center" />

    <GridLayout

        android:layout_width="378dp"
        android:layout_height="360dp"
        android:layout_below="@+id/tvSubtitle"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="40dp"

        android:columnCount="3"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/button1"

            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/sofa"
            android:backgroundTint="@color/gradi"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button2"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/fridge"
            android:backgroundTint="@color/gradi"

            android:textColor="@color/black"
            android:textSize="20dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button3"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shower"
            android:backgroundTint="@color/gradi"

            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/button4"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/darker_gray"
            android:paddingLeft="16dp"
            android:text="Гостиная"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/button5"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/darker_gray"
            android:paddingLeft="30dp"
            android:text="Кухня"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/button6"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:backgroundTint="@color/darker_gray"
            android:paddingLeft="25dp"
            android:text="Ванная"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button7"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/laptop"
            android:backgroundTint="@color/gradi"

            android:textColor="@color/black"
            android:textSize="20dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button8"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bed"
            android:backgroundTint="@color/gradi"

            android:textColor="@color/black"
            android:textSize="20dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button9"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:background="@drawable/television"
            android:backgroundTint="@color/gradi"

            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/button10"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/darker_gray"
            android:paddingLeft="16dp"
            android:text="Кабинет"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/button11"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/darker_gray"
            android:paddingLeft="18dp"
            android:text="Спальня"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/button12"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:backgroundTint="@color/darker_gray"
            android:paddingLeft="35dp"
            android:text="Зал"
            android:textColor="@color/black"
            android:textSize="15dp" />


        <!-- Другие кнопки с цифрами 0-9 -->


    </GridLayout>
    <androidx.appcompat.widget.AppCompatButton
android:textStyle="bold"
        android:textAllCaps="false"
        android:background="@drawable/bluecircle"
        android:layout_marginLeft="70dp"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:text="Сохранить"
        android:backgroundTint="@color/gradi"
        android:textColor="@color/white" />



</LinearLayout>

